	if($db)
	{
		echo "database available";


		if(mysqli_query($conn,"insert into student values(1003,'gowthaman',77)"))
			echo "record inserted success";
		else
			echo "record failure";
	}	
	
	else
		echo "database not available".mysqli_error($conn);
	}
